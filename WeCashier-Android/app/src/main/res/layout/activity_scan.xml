<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:background="#3CB371"
        android:id="@+id/barinput"
        android:orientation="horizontal">

        <EditText
            android:textColorLink="#3CB371"
            android:hint="手动输入条码"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            android:id="@+id/editText"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <Button
            android:textColor="#ffffff"
            android:background="#3CB371"
            android:text="添加"
            android:id="@+id/addBarcode"
            android:layout_width="match_parent"
            android:layout_weight="2"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <ImageButton
        android:layout_below="@+id/barinput"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Open_camera_light"
        android:background="@drawable/openlightbackground"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#883CB371"
        android:orientation="horizontal"
        android:layout_above="@+id/bar1">
        <TextView
            android:textColor="#ffffff"
            android:id="@+id/goods_name"
            android:textSize="27dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:textColor="#ffffff"
            android:id="@+id/goods_isAdd"
            android:layout_centerVertical="true"
            android:textSize="13.5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            />
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:id="@+id/bar1">

        <Button
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_centerHorizontal="true"
            android:text="确认"
            android:id="@+id/confuse"
            android:textColor="#ffffff"
            android:background="#3CB371"
            android:layout_alignParentBottom="true"/>

    </LinearLayout>

    <FrameLayout
        android:id="@+id/content_frame"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />


</RelativeLayout>